---
import "../../styles/global.scss";
import "./AppLayout.scss";

import Header from "../../components/Header/Header.astro";

type Props = {
  title?: string;
  description?: string;
  ogImage?: string;
};

const {
  title = "石蹴り遊び - 公式サイト",
  description = "フォークロックバンド・石蹴り遊びの公式サイトです。",
  ogImage = "/rayuela-test.jpg",
} = Astro.props;

const siteUrl = "https://rayuela.jp/";
const pageUrl = new URL(Astro.url.pathname, siteUrl).toString();
const ogImageUrl = new URL(ogImage, siteUrl).toString();
---

<html lang="ja">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
    {description && <meta name="description" content={description} />}
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={ogImageUrl} />
    <meta property="og:url" content={pageUrl} />
  </head>
  <body>
    <Header />
    <main class="main">
      <slot />

      <!-- 下記の方々の多大なる御援助に深く感謝したい 敬称略・順不同
